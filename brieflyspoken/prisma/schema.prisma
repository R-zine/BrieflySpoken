datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Briefing {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    content String
    isTwo Boolean
    isCustomVoice Boolean
    audio Audio?
}

model Audio {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    briefingId Int @unique
    script Briefing @relation(fields: [briefingId], references: [id])
    url String
    isUserAdded Boolean
}